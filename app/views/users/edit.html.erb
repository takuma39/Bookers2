<div class="body" style="user-select: auto;">
  <div class="container" style="user-select: auto;">

<!-- サクセスメッセージ -->
<%= render 'template/flash.message' %>

<%= form_for(@user) do |f| %>


    <div class="field" style="user-select: auto;">
      <label for="user_name" style="user-select: auto;">Name</label>
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field" style="user-select: auto;">
      <label for="user_image" style="user-select: auto;">Image</label>
      <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
    </div>

    <div class="field" style="user-select: auto;">
      <label for="user_introduction" style="user-select: auto;">Introduction</label>
      <!--%= f.text_area :introduction, class:"form-control", rows:"3", placeholder:"コメントここに" %-->
    </div>

    <div class="actions" style="user-select: auto;">
      <%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
    </div>

<% end %>
  </div>
</div>

