

<%= render 'template/flash.message' %>


<div class="row" style="user-select: auto;">

<!-- 左側 -->


<%= render 'template/sidebar' %>

<!-- 右側 -->

  <div class="col-xs-9" style="user-select: auto;">
    <h2 style="user-select: auto;">Users</h2>

    <table class="table" style="user-select: auto;">
  <thead style="user-select: auto;">
    <tr style="user-select: auto;">
      <th style="user-select: auto;">image</th>
      <th style="user-select: auto;">name</th>
      <th colspan="3" style="user-select: auto;"></th>
    </tr>
  </thead>

  <tbody style="user-select: auto;">
    <% @users.each do |user| %>


      <tr style="user-select: auto;">
        <td style="user-select: auto;"><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></td>
        <td style="user-select: auto;"><%= user.name %></td>
        <td style="user-select: auto;"><%= link_to " Show", user_path(user.id) %></td>
      </tr>

    <% end %>
  </tbody>
</table>

  </div>

</div>
