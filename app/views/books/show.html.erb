

<!-- サクセスメッセージ -->
<%= render 'template/flash.message' %>

<div class="row" style="user-select: auto;">

<!-- 左側 -->
<%= render 'template/sidebar' %>

<!-- 右側 -->

  <div class="col-xs-9" style="user-select: auto;">
		<h2 style="user-select: auto;">Book detail</h2>
		<table class="table" style="user-select: auto;">
		  <tbody style="user-select: auto;">
        <tr style="user-select: auto;">
          <td style="user-select: auto;">
            <%= link_to user_path(@books.user_id) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>

            <% end %> <!-- 変更 -->
            <%= link_to @books.user.name, user_path(@books.user_id) %>
          </td>
          <td style="user-select: auto;"><%= link_to "#{@books.title}", book_path(@books.id) %></td> <!-- 変更 -->
          <td style="user-select: auto;"><%= @books.body %></td> <!-- 変更 -->
          <% if @books.user_id == current_user.id %>
          <td style="user-select: auto;"><%= link_to "Edit", edit_book_path, class: "btn-sm btn-success" %></td>　<!-- 変更 -->
          <td style="user-select: auto;"><%= link_to "Destroy", @books, method: :delete, "data-confirm" => "本当に削しますか？", class: "btn-sm btn-danger" %></td>　<!-- 変更 -->
          <% end %>
        </tr>
      </tbody>
    </table>

  </div>


</div>