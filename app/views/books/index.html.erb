        </ul>
    </div>
<% end %>



  <!-- 左側 -->
<%= render 'template/sidebar' %>


  <!-- 右側 -->

  <div class="col-xs-9" style="user-select: auto;">
    <h2 style="user-select: auto;">Books</h2>

    <table class="table table-hover table-inverse" style="user-select: auto;">
  <thead style="user-select: auto;">
    <tr style="user-select: auto;">
      <th style="user-select: auto;"></th>
      <th style="user-select: auto;">Title</th>
      <th style="user-select: auto;">Opinion</th>
      <th colspan="3" style="user-select: auto;"></th>
    </tr>
  </thead>

  <tbody style="user-select: auto;">
    <% @books.each do |book| %>

      <tr style="user-select: auto;">
        <td style="user-select: auto;">
          <%= link_to user_path(book.user_id) do %>
          <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
          <% end %>
        </td>
        <td style="user-select: auto;"><%= link_to "#{book.title}", book_path(book.id) %></td>
        <td style="user-select: auto;"><%= book.body %></td>
      </tr>

    <% end %>

  </tbody>
</table>
  </div>
