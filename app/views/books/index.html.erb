<!-- サクセスメッセージ -->
<%= render 'template/flash.message' %>

<!-- エラーメッセージ -->
<% if @book.errors.any? %>
    <div id="error_explanation">
        <h3><%= @book.errors.count %>errors prohibited this obj from being saved</h3>
        <ul>
            <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
